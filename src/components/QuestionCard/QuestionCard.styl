.Question
  max-width 800px
  margin 0 auto
  background #fff
  padding-bottom 20px
  border-bottom 1px solid #cecece
  .heading
    padding 20px 20px 20px
    background #e1f2fc
    .logo, div
      display inline-block
      vertical-align middle
    .logo
      border-radius 50%
      margin 0 3% 0 0
    p
     font-size 12px
     color #777
    .username
      color #337ece
      font-size 1.4em
      font-weight bold
      cursor pointer
    .title
      color #337ece
  .activities
    background #fff
    display flex
    justify-content space-around
    height 210px
    padding-top 20px
    .tab
      display flex
      justify-content space-between
    .summary
      padding 15px
      display flex
      flex-direction column
      justify-content space-around
  .foot
    display none
  .details
    padding 10px
    .summary
      display flex
      justify-content space-between
      padding 20px 30px 0 0
@media (min-width: 768px)
  .Question
    overflow hidden
    .heading
      width 78%
    .logo
      width 4em
    .activities
      border-left 96px solid #e1f2fc
    .details
      display flex
      .questionContent
        width 75%
      .summary
        display block
        padding-top 0
    .foot
      display inline
      padding: 5px 0 10px 0
      font-size 0.8em
      border-top 1px solid #777
      color #777
      position relative
      bottom 37px
      left 25px
  .fullQuestion
    padding-bottom 0
    .heading
      width 100%
    .details
      border-left 96px solid #e1f2fc
      .questionContent
        padding 0 10px 20px 0
        width 80%
    .summary
      a
        position relative
        bottom 70px

