.Tab
  background #ebebeb
  height 100%
  margin 1px 1px 0 0
  display flex
  flex-direction column
  justify-content flex-end
  align-items center
  padding: 0 10px 0 10px
  p
    color #777777
  .logo
    position relative
    bottom 25%
    border-radius 50%
    margin 20px 20px 0 20px
  .foot
    padding: 5px 0 10px 0
    font-size 0.8em
    border-top 1px solid #777
  .counter
    padding: 50% 0 0 0
    position relative
    bottom 32%
    & + .foot
        font-size 1em
        border none
  .dot
    display block
    position relative
    top 5px
    width 10px
    height 10px
    border-radius 50%
    background: #5b5b5b
@media (min-width: 768px)
  .logo
    width 4em