.Question
  max-width 800px
  margin 0 auto
  .heading
    background #e1f2fc
    padding 20px 20px 20px
    .logo, div
      display inline-block
      vertical-align middle
    .logo
      border-radius 50%
      margin 0 3% 0 0
    p
     font-size 12px
     color #777
    .username
      color #337ece
      font-size 1.4em
      font-weight bold
    .title
      color #337ece
  .activities
    display flex
    justify-content space-between
    height 160px
    .tab
      display flex
      justify-content space-between
    .summary
      padding 15px
      display flex
      flex-direction column
      justify-content space-around
@media (min-width: 768px)
  .logo
    width 4em
/* wrócić po zrobieniu kart */
@media (min-width: 992px)
  .heading
    width: 77%