.Header
    width 100%
    background-color #fff
    font-family Varta
    form
      margin 0 auto
      padding 0 0 20px 0
      .fs1, .fs2
        border none
        padding 10px 0 0 0
      .fs1
        > div
          text-align center
          h1
            margin 0.67em 0 0.67em 0
          > div
            padding 0 0 10px 0
            label
              margin 0 10px 0 2px
      #search
        width 100%
        padding 8px 10px 8px 10px
      .fs2
        text-align center
        padding 10px 0 0 0
        select
          border none
          font-weight bold
          color #777777
          appearance: none;
          border-bottom 1px solid #777777
        .hot, .submit
          display inline-block
          background none
          border none
          color: #337ece
        .submit
          display block
          border 1px solid #777777
          color #777777
          margin 10px auto 0 auto
          padding 10px
          width 175px
          height 35px
@media (min-width: 768px)
  form
    display flex
    .fs1
      flex 2
    .fs2
      margin 0 0 0 10px
      align-self flex-end
@media (min-width: 992px)
  .Header
    form
      width 800px
      .fs1
        > div
          display flex
          justify-content space-between
          align-items center
      .fs2
        .submit
          margin 35px 0 0 0 !important