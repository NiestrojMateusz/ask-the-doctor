.Header
  width 100%
  background-color #fff
  font-family Varta
  form
    width 800px
    margin 0 auto
    padding 50px 0 20px 0
    display flex
    .fs1
      flex 2
      border none
      margin: 0 25px 0 0
      > div
        display flex
        justify-content space-between
        align-items center
        padding 0 0 20px 0
      label
        margin 0 10px 0 10px
    #search
      width 100%
      padding 8px 10px 8px 10px
    .fs2
      width 20%
      border 1px solid red
      select
        border none
        font-weight bold
        color #a8a8a8
        appearance: none;
        border-bottom 1px solid #a8a8a8