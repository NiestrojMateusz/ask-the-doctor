.Comment, .Reply
  background white
  padding 10px 10px 15px 10px
  color #98a5b5
  box-shadow 0px -3px 5px 0px rgba(0,0,0,0.45)
  display: flex;
  .content
    border-top 1px solid #777
    position relative
    right 55px
    width 110%
  .logo
    border-radius 50%
    margin 0 10px 0 0
  .heading
    display flex
    align-items center
    padding-bottom 5px
    flex 2
    .username
      padding 0 10px 0 0
      color #337ece
      font-size 1em
      font-weight bold
      text-decoration none
    p
     text-align right
     margin 1em 0
  .content
    p
      margin 1em 0
  .votes
    display flex
    justify-content flex-end
    margin-right 30px
    color #000
.Reply
  box-shadow none
  border-left 10px solid #cecece
  border-top 1px solid #eee
@media (min-width: 768px)
  .Comment, .Reply
    padding 10px 10px 0px 10px
    .logo
      width 4em
    .contentContainer
      position relative
    .heading
      padding 0
    .content
      width 80%
      right 0
      bottom 20px
      border none
    .votes
      position absolute
      top 45px
      left 83%
  .Reply
    border-left-width:  1px
    width 90%
    align-self flex-end
@media (min-width: 992px)
  .Comment, .Reply
    border 1px solid #cecece


