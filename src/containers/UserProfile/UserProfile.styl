.UserProfile
  padding 20px 20px 0 20px
  .logo
    border-radius 50%
    display block
  h4
    color #777
    font-weight normal
  a
    color #337ece
    text-decoration none
    font-weight 600
  .heading
    display flex
    flex-direction column
    align-items center
    text-align center
    border-bottom 1px solid #777
    margin 0 0 10px 0
    .username
      font-size 1.3em
      padding 10px 0 15px 0
      color #337ece
    p
      padding 0 0 15px 0
  main
    display flex
    flex-direction column
    align-items center
    text-align center
  section
    margin 0 0 20px 0
    h4
      width 80%
      margin 10px auto
    .logo
      margin 0 auto 20px auto
  ul
    list-style none
  .stats
    li
      margin 30px 0 10px 0
      position relative
      display inline-block
      width 100px
      padding 20px 0 20px 0
      &:before
        content ""
        position absolute
        width 100%
        height 100%
        top 0%
        left 2%
        z-index -1
        background #e7f4fd
        transform rotate(30deg)
    li
      &:nth-child(2n+1)
        &:before
          transform rotate(65deg)
      span
        display block
        font-size 1.5em
  .user_joined ul
    display flex
    justify-content space-between
    margin 20px 0 20px 0
  .hotDisc
    a
      display inline-block
      padding 0 0 5px 0
      &.title
        font-size 1.2em
        display block
        width 100%
      &+ span
        font-size 0.7em
        display inline
        margin 0 0 0 5px
    .summary
      display flex
      flex-wrap wrap
      justify-content space-between
      li
        margin 0 10px 0 10px
      span
        font-size 1.3em
@media (min-width: 768px)
  .UserProfile
    width 750px
    .heading
      .userDetails
        display flex
        width: 100%
        justify-content space-around
        padding-bottom 20px
        h4, p
          display inline
          padding 0 5px 0 5px
    .stats li
      margin 30px 10px 30px 10px
    .logo
      width 4em
    main
      h4
        width 100%
      .hotDisc
        position relative
        &:before
          content ""
          background #eee
          width 137%
          height 80%
          position absolute
          z-index -1
          top 70px
          left -100px
        .summary li
          margin 0 20px 0 20px
@media (min-width: 992px)
  .UserProfile
    .heading
      .userDetails
        width 70%








